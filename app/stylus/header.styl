body > header
    background rgba(255, 255, 255, 1)
    position fixed
    z-index 40
    top 0
    left 0
    right 0
    box-sizing border-box
    overflow hidden
    .animate.ng-hide-add,
    .animate.ng-hide-remove
        transition all ease 250ms
        display block !important
    .animate.ng-hide-add.ng-hide-add-active,
    .animate.ng-hide-remove
        transform translate3d(0, 80px, 0)
    .animate.ng-hide-add,
    .animate.ng-hide-remove.ng-hide-remove-active
        transform translate3d(0, 0, 0)
    .container
        clearfix()
        border-bottom 1px solid border-color
        height 80px
        box-sizing border-box
        padding 30px 0 0 0
    .world-population
        float right
        line-height 40px
        height @line-height
        border 1px solid border-color
        padding 0 20px 0 105px
        border-radius 5px
        font-size 18px
        margin 0 10px
        color #666666
        position relative
        overflow hidden
        .toggle
            position absolute
            left 0
            top 0
            bottom 0
            height auto
        label
            position relative
            border-top none !important
            border-bottom none !important
            border-left none !important
            border-right 1px solid border-color !important
            border-radius 0 !important
        label.active
            background-color highlight-yellow
        .icon-world
            background-icon()
            background-position -130px -230px
        .icon-gender:before
            content ''
            position absolute
            left 0
            top 0
            bottom 0
            right 0
            opacity 0.8
        .icon-male:before
            background-icon()
            background-position -130px -330px
        .icon-female:before
            background-icon()
            background-position -30px -330px
    .profile
        float right
        line-height 40px
        border-radius 5px
        font-size 14px
        padding 0 20px
        margin 0 10px
        background highlight-yellow
        border 1px solid highlight-yellow
        color #333333
        cursor pointer
    .logo
        float left
        bottom 10px
        position relative
        .icon-alpha
            background-icon()
            height 50px
            width 80px
            position absolute
            left 180px
            top -2px
            background-position -305px -30px
            vertical-align middle
        .title
            display block
        .subtitle
            display block
            font-size 12px
            line-height 12px
            color hsl(0, 0%, 40%);
        a
            display block
            line-height 40px
            font-weight 200
            font-size 30px
            cursor pointer

    ul.link-list
        float right
        a
            font-size 14px
            display block
            cursor pointer
            float left
            line-height 40px
            padding 0 20px 0 20px
    form.change-language
        float right
        padding-top 10px
        padding-left 15px
        select
            font-size 12px
            color white
            padding-left 8px
            padding-right 5px
            background-color #333
            height 20px
            -webkit-appearance none
    // loader
    .loader
        position absolute
        text-align right
        left 290px
        top 32px
        z-index 2
        font-size 20px
        color #666
        opacity 0
        transition opacity 300ms ease

        &.active
            opacity 1

        &:after
            display block
            content ''
            position absolute
            z-index 1
            right -10px
            top -9px
            height 40px
            width 40px
            background highlight-yellow
            border-radius 40px

        &:before
            z-index 2
            position absolute
            right 1px
            top 1px
            animation loading-animation 1.25s infinite linear

@keyframes loading-animation
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)
