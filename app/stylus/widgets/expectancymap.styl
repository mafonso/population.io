expectancy-map
  display block
  line
    stroke-width 0.8
    stroke #575757
  .desc
    .years-left
      font-size 36px
      fill #333
    .text-block
      font-size 14px
      fill #999
      tspan
        fill #333
      line
        stroke #dedede
  .text-ref
    text-anchor start
  .text-rel
    text-anchor end
  .country
    stroke border-color
    fill #e5e5e5
  .country:hover
    fill highlight-yellow
    cursor pointer
  .country.longer
    fill #3c763d
  .country.longer:hover
    fill highlight-yellow
  .country.shorter
    fill #a94442
  .country.shorter:hover
    fill highlight-yellow
  .country-rel.country-active
    fill highlight-yellow
  .country-ref.country-active
    fill highlight-blue
