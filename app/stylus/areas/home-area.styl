.home-area
    z-index 20
    background #fff
    position relative
    margin-bottom 90px
    .question
        h1
            margin 0
            padding 0
            color #000
            font-size 72px
            font-family 'PlantinMTStd-Light', sans-serif
        p
            font-size 24px
            margin 20px 0 40px 0
            color #666666
            font-family 'Theinhardt-Light', 'Helvetica', sans-serif
    form
        &:after
            clear both
            content ' '
            display block
        &.highlight
            input
                &.ng-invalid
                    box-shadow 0 0 8px rgba(red, 1)
        &.highlight-extra
            input
                &.ng-dirty.ng-invalid
                &.ng-invalid
                    box-shadow 0 0 8px rgba(red, 1)
        button
            position relative
            top -35px
            left 10px
        input
            transition all 0.2s
            background highlight-yellow
            border 1px solid highlight-yellow
            width 240px
            height 50px
            padding 0 20px
            margin 0
            border-radius 12px
            &.ng-dirty.ng-invalid
                invalid = mix(highlight-yellow, lightness(red, 90%), 30%)
                box-shadow 0 0 8px rgba(red, 1)
                border-color invalid
                background-color invalid
            &.day-field
                width 90px
                margin-right 10px
            &.month-field
                width 140px
                margin-right 10px
            &.year-field
                width 100px
                margin-right 30px

        ::-webkit-input-placeholder
            color #666
        .typeahead
            margin 0 0 0 0
            &.icon-country
                margin 0 10px 0 0
                &:after
                    content ''
                    height 40px
                    width 40px
                    position absolute
                    z-index 9
                    right 5px
                    top 6px
                    background-icon()
                    background-position -30px -830px

        .toggle
            margin-top 0px
            label
                padding-right 60px
        .icon
            position relative
            margin 0
            input
                padding-right 40px
            &:after
                content ''
                height 40px
                width 40px
                position absolute
                z-index 9
                right 5px
                top 4px
                background-icon()
            &.icon-birthday:after
                background-position -35px -230px
            &.icon-male:after
                background-position -130px -330px
            &.icon-female:after
                background-position -30px -330px
