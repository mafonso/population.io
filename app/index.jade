extends views/layouts/default
block content
    svg.defs-area
        defs
            include ../assets/shapes-01.svg
            include ../assets/shapes-02.svg
            include ../assets/shapes-03.svg
            include ../assets/shapes-04.svg
            include ../assets/shapes-05.svg
            include ../assets/shapes-05-large.svg
            include ../assets/female-large.svg
            include ../assets/milestones.svg

    .share.animate(ng-class="{'expanded': !expanded}", ng-cloak)
        .tedtalk
            a(href="{{ 'SHARE_TED_TALK_URL' | translate }}") {{ 'SHARE_TED_TALK' | translate }}

        span {{ 'SHARE_TEXT' | translate }}
        .links
            a.fa.fa-facebook-square(href="https://facebook.com/populationio")
            a.fa.fa-twitter-square(href="https://twitter.com/populationio")

    ul.navigation(ng-show="profile.active")
        li(ng-class="{'active': currentPage == 0}", ng-click="showSection('home')") <span></span>
        li(ng-class="{'active': currentPage == 1}", ng-click="showSection('summary')") <span></span>
        li(ng-class="{'active': currentPage == 4}", ng-click="showSection('expectancy')") <span></span>
        li(ng-class="{'active': currentPage == 2}", ng-click="showSection('milestones')") <span></span>
        li(ng-class="{'active': currentPage == 3}", ng-click="showSection('birthdays')") <span></span>
        li(ng-class="{'active': currentPage == 5}", ng-click="showSection('death')") <span></span>

    section#home(ng-controller='HomeCtrl', du-scrollspy='home', data-index="0", ng-cloak)
        include views/partials/home-area
    section#summary(ng-controller='SummaryCtrl', du-scrollspy='summary', data-index="1", offset='200', ng-class="{'hidden': !profile.active}", ng-cloak)
        include views/partials/summary-area
    section#expectancy(ng-controller='ExpectancyCtrl', du-scrollspy='expectancy', data-index="4", offset='200', ng-class="{'hidden': !profile.active}", ng-cloak)
        include views/partials/expectancy-area
    section#milestones(ng-controller='MilestonesCtrl', du-scrollspy='milestones', offset='200', data-index="2", ng-class="{'hidden': !profile.active}", ng-cloak)
        include views/partials/milestones-area
    section#birthdays(ng-controller='BirthdaysCtrl', du-scrollspy='birthdays', data-index="3", offset='200', ng-class="{'hidden': !profile.active}", ng-cloak)
        include views/partials/birthdays-area
    section#death(ng-controller='DeathCtrl', du-scrollspy='death', data-index="5", offset='200', ng-class="{'hidden': !profile.active}", ng-cloak)
        include views/partials/death-area
    include views/partials/modals
