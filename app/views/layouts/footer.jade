footer
    .container
        .block
            h2.icon.icon-mail
                span {{ 'FOOTER_SIGNUP_TITLE' | translate }}
            p(compile-unsafe="'FOOTER_SIGNUP_TXT' | translate")
            form.form-inline(name="emailForm", novalidate)
                input.form-control.input-dark(
                type="email",
                ng-model="email",
                placeholder="your@email.com",
                required
                )
                button.btn(
                type="button",
                ng-click="registerMail()",
                ng-disabled="emailForm.$invalid || sending"
                )
        .block
            h2
                i.fa.fa-share
                span {{ 'FOOTER_SHARE_TITLE' | translate }}
            a(target="_blank", share="facebook", share-title="population.io",
            onClick="ga('send', 'event', 'FooterShare', 'click', 'Facebook')") Facebook
                span.fa.fa-facebook-square
            a(target="_blank", share="twitter", share-title="population.io",
            onClick="ga('send', 'event', 'FooterShare', 'click', 'Twitter')") Twitter
                span.fa.fa-twitter-square
            a(target="_blank", share="linkedin", share-title="population.io",
            onClick="ga('send', 'event', 'FooterShare', 'click', 'LinkedIn')") LinkedIn
                span.fa.fa-linkedin-square
            a(target="_blank", share="qzone", share-title="population.io",
            onClick="ga('send', 'event', 'FooterShare', 'click', 'qZone')") qZone
                span.fa.fa-star
            a(target="_blank", share="tencentWeibo", share-title="population.io",
            onClick="ga('send', 'event', 'FooterShare', 'click', 'Tencent Weibo')") Tencent Weibo
                span.fa.fa-tencent-weibo
            a(target="_blank", share="sinaWeibo", share-title="population.io",
            onClick="ga('send', 'event', 'FooterShare', 'click', 'Sina Weibo')") Sina Weibo
                span.fa.fa-weibo

        .block.small
            h2
                span {{ 'FOOTER_MORE_TITLE' | translate }}
            a(href="mailto:worldpopulationproject@gmail.com") {{ 'FOOTER_MORE_CONTACT' | translate }}
            a(href="http://api.population.io", target="_blank") {{ 'FOOTER_MORE_API' | translate }}
