.container
    .summary-area
        h3(translate="SUMMARY_INTRO" translate-values="{val1: (rankGlobal+1 | number:0), val2: (worldYoungerPercentageSimple | number:0), " +
        "val3: (countryYoungerPercentageSimple | number:0), val4: (profile.country | translate ) }")
        .region-switcher
            span(ng-class='{active:region=="World"}', ng-click='selectWorld()') {{ 'SUMMARY_WORLD' | translate }}
            span(ng-class='{active:region!="World"}', ng-click='selectCountry()', title='{{ profile.country | translate }}') {{ profile.country | translate }}
