.container
    .death-area
        header
            h1(translate="DEATH_INTRO" translate-values="{dodWorld: (dodWorld|date:'dd MMM yyyy'), country: country, dodCountry:(dodCountry|date:'dd MMM yyyy') }")
        .type-switcher
            span(ng-class='{active:type=="distribution"}', ng-click='type="distribution"') {{ 'DEATH_MORTALITY_DISTRIBUTION' | translate }}
            span(ng-class='{active:type=="chances"}', ng-click='type="chances"') {{ 'DEATH_CHANCES_OF_DYING' | translate }}

        death-chart
        h2 {{ 'DEATH_EXPECTANCY_TITLE' | translate }}
        .death-stats
            .column
                .content
                    .title.world {{dodWorld|date:'dd MMM yyyy'}}
                    .copy(translate="DEATH_EXPECTANCY_TXT_WORLD" translate-values="{remainingLifeWorldInYears: remainingLifeWorldInYears}")
            .column
                .content
                    .title {{differenceInDays}}
                    .copy(translate="DEATH_EXPECTANCY_TXT_DIFFERENCE" translate-values="{soMuchToDo: soMuchToDo, differenceInUnits:differenceInUnits}")
            .column
                .content
                    .title.country {{dodCountry|date:'dd MMM yyyy'}}
                    .copy(translate="DEATH_EXPECTANCY_TXT_COUNTRY" translate-values="{remainingLifeCountryInYears: remainingLifeCountryInYears, country:country}")
